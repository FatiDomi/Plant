@model Plant.WebApp.Models.Planta



<div class="form-container">
    <h2 class="text-center text-danger">⚠️ Confirmar borrado</h2>

    <p class="text-center">¿Estás seguro de que quieres borrar esta planta?</p>

    <div class="card mb-3">
        <img src="@Model.ImagenUrl" class="card-img-top" alt="@Model.Nombre" />
        <div class="card-body">
            <h5 class="card-title">@Model.Nombre</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.NombreCientifico</h6>
            <p class="card-text"><strong>Origen:</strong> @Model.Origen</p>
            <p class="card-text"><strong>Cuidados:</strong> @Model.CuidadosBasicos</p>
            <p class="card-text"><strong>Clima ideal:</strong> @Model.ClimaIdeal</p>
            <p class="card-text"><strong>Floración:</strong> @Model.Floracion</p>
            <p class="card-text"><strong>Altura máxima:</strong> @Model.AlturaMaxima</p>
        </div>
    </div>

    <form asp-action="BorrarConfirmado" method="post" class="text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-pastel">Sí, borrar</button>
        <a asp-action="Index" class="btn-cancel-pastel">Cancelar</a>

    </form>
</div>
