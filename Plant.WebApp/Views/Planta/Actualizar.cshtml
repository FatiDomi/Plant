@model Plant.WebApp.Models.Planta

<div class="form-container">
    <h2 class="text-center mb-4">✏️ Actualizar planta</h2>

    <!-- Mostrar mensaje de éxito si existe -->
    @if (TempData["MensajeActualizar"] != null)
    {
        <div class="success-message text-center">
            @TempData["MensajeActualizar"]
        </div>
    }
    else
    {
        <form asp-action="Actualizar" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la planta" />
            </div>
            <div class="mb-3">
                <label asp-for="NombreCientifico" class="form-label"></label>
                <input asp-for="NombreCientifico" class="form-control" placeholder="Nombre científico" />
            </div>
            <div class="mb-3">
                <label asp-for="Origen" class="form-label"></label>
                <input asp-for="Origen" class="form-control" placeholder="Origen" />
            </div>
            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="CuidadosBasicos" class="form-label"></label>
                <textarea asp-for="CuidadosBasicos" class="form-control" placeholder="Cuidados básicos"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="ClimaIdeal" class="form-label"></label>
                <input asp-for="ClimaIdeal" class="form-control" placeholder="Clima ideal" />
            </div>
            <div class="mb-3">
                <label asp-for="Floracion" class="form-label"></label>
                <input asp-for="Floracion" class="form-control" placeholder="Floración" />
            </div>
            <div class="mb-3">
                <label asp-for="AlturaMaxima" class="form-label"></label>
                <input asp-for="AlturaMaxima" class="form-control" placeholder="Altura máxima" />
            </div>
            <div class="mb-3">
                <label asp-for="ImagenUrl" class="form-label"></label>
                <input asp-for="ImagenUrl" class="form-control" placeholder="URL o ruta de la imagen" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn-pastel">Guardar cambios</button>
                <a asp-action="Index" class="btn-cancel-pastel">Cancelar</a>
            </div>
        </form>
    }
</div>
